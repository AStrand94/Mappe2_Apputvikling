<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded_bg"
    android:paddingBottom="20dp"
    android:padding="15dp">

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/send_msg_txtview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/new_msg_txt"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/send_msg_txtview"
        android:layout_alignParentStart="true"
        android:gravity="start|end"
        app:roundedCorners="true"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="@string/delete"
        android:id="@+id/delete_sent_msg"
        android:layout_marginTop="31dp"
        android:layout_marginStart="44dp"
        app:bootstrapBrand="success"
        android:layout_below="@+id/new_msg_txt"
        android:layout_alignParentStart="true"
        app:roundedCorners="true"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="@string/cancel"
        android:id="@+id/cancel_new_auto_msg"
        app:bootstrapBrand="info"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/delete_sent_msg"
        android:layout_alignParentEnd="true"
        app:roundedCorners="true"/>

</RelativeLayout>